<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CRM.Views.PaymentView.EditablePaymentPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            x:Name="SaveToolbarItem"
            Clicked="Save_Clicked"
            Order="Primary"
            Priority="1" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Picker
                x:Name="OrderPicker"
                Title="Select a related order number"
                Margin="10,10,10,0"
                ItemDisplayBinding="{Binding Number}" />
            <Entry
                x:Name="SumEntry"
                Margin="10,20,10,0"
                FontSize="16"
                Placeholder="Sum"
                PlaceholderColor="#bababa" />
            <Picker
                x:Name="StatusPicker"
                Title="Select a status"
                Margin="10,10,10,0" />
            <Picker
                x:Name="MethodPicker"
                Title="Select a payment method"
                Margin="10,10,10,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>