<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CRM.Views.PaymentView.PaymentPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Label
                x:Name="SumLabel"
                Margin="10,20,10,0"
                FontSize="16"
                IsVisible="False"
                Text="Sum: " />
            <Label
                x:Name="StatusLabel"
                Margin="10,20,10,0"
                FontSize="16"
                IsVisible="False"
                Text="Status: " />
            <Label
                x:Name="MethodLabel"
                Margin="10,20,10,0"
                FontSize="16"
                IsVisible="False"
                Text="Method: " />
            <Label
                x:Name="OrderNumberLabel"
                Margin="10,20,10,0"
                FontSize="16"
                IsVisible="False"
                Text="Order number: " />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>