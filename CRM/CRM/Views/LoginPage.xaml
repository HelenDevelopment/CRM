            </StackLayout>

            <Grid Grid.Row="1" Margin="20,0,20,0">

                <Grid.RowDefinitions>

                    <RowDefinition Height="*" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />

                </Grid.RowDefinitions>

                <StackLayout>
                    <Image
                        HeightRequest="70"
                        Source="user_login.png"
                        VerticalOptions="StartAndExpand" />
                </StackLayout>

                <Entry
                    x:Name="loginEntry"
                    Grid.Row="1"
                    FontSize="16"
                    Placeholder="Login"
                    PlaceholderColor="#bababa" />
                <Entry
                    x:Name="passwordEntry"
                    Grid.Row="2"
                    FontSize="16"
                    IsPassword="True"
                    Placeholder="Password"
                    PlaceholderColor="#bababa" />
                <Button
                    Grid.Row="3"
                    BackgroundColor="#3897f0"
                    HeightRequest="50"
                    Text="LogIn"
                    TextColor="White"
                    VerticalOptions="Start" />
