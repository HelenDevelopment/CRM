<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CRM.Views.CustomerView.CustomerPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            x:Name="EditToolbarItem"
            Clicked="Edit_Clicked"
            Order="Primary"
            Priority="2" />
        <ToolbarItem
            x:Name="DeleteToolbarItem"
            Clicked="Delete_Clicked"
            Order="Primary"
            Priority="1" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label
                x:Name="NameLabel"
                Margin="10,20,10,0"
                FontSize="16"
                IsVisible="False"
                Text="Name: " />
            <Label
                x:Name="PhoneLabel"
                Margin="10,20,10,0"
                FontSize="16"
                IsVisible="False"
                Text="Phone: " />
            <Label
                x:Name="EmailLabel"
                Margin="10,20,10,0"
                FontSize="16"
                IsVisible="False"
                Text="Email: " />
            <Button
                x:Name="OrdersButton"
                BackgroundColor="#3897f0"
                Clicked="OrdersButton_Clicked"
                Text="Orders"
                TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>