<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CRM.Views.Orders"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:CRM.Models.Converters;assembly=CRM">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            x:Name="AddToolbarItem"
            Clicked="Add_Clicked"
            Order="Primary"
            Priority="0" />
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:OrderStatusConverter x:Key="OrderStatusConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout>
        <SearchBar TextChanged="SearchBar_TextChanged" />
        <StackLayout x:Name="MessageStackLayout" Padding="10,5,0,5">
            <Label
                x:Name="MessageLabel"
                FontSize="14"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="You must to sign in before viewing this page"
                VerticalTextAlignment="Center" />
        </StackLayout>
        <StackLayout x:Name="RefreshStackLayout">
            <ActivityIndicator
                x:Name="RefreshActivityIndicator"
                Margin="4"
                HeightRequest="25"
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}"
                WidthRequest="25" />
        </StackLayout>
        <ListView
            x:Name="OrderList"
            ItemsSource="{Binding OrderList}"
            RowHeight="49">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout
                            Margin="0"
                            Padding="0"
                            Spacing="0">
                            <Label
                                Margin="10,0,10,0"
                                FontSize="Medium"
                                Text="{Binding Status, Converter={StaticResource OrderStatusConverter}}" />
                            <Label
                                Margin="10,0,10,0"
                                FontSize="Small"
                                Text="{Binding Number}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
