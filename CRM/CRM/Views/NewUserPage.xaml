<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="CRM.Views.NewUserPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="New user">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="Save_Clicked" Text="Save" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry
                x:Name="fullNameEntry"
                Margin="10,20,10,0"
                FontSize="16"
                Placeholder="FullName"
                PlaceholderColor="#bababa" />
            <Entry
                x:Name="emailEntry"
                Margin="10,10,10,0"
                FontSize="16"
                Placeholder="Email"
                PlaceholderColor="#bababa" />
            <Entry
                x:Name="phoneEntry"
                Margin="10,10,10,0"
                FontSize="16"
                Placeholder="Phone"
                PlaceholderColor="#bababa" />
            <Entry
                x:Name="positionEntry"
                Margin="10,10,10,0"
                FontSize="16"
                Placeholder="Position"
                PlaceholderColor="#bababa" />
            <Entry
                x:Name="loginEntry"
                Margin="10,10,10,0"
                FontSize="16"
                Placeholder="Login"
                PlaceholderColor="#bababa" />
            <Entry
                x:Name="passwordEntry"
                Margin="10,10,10,0"
                FontSize="16"
                IsPassword="True"
                Placeholder="Password"
                PlaceholderColor="#bababa" />
            <Picker
                x:Name="genderPicker"
                Title="Gender"
                Margin="10,10,10,0">
                <Picker.Items>
                    <x:String>Male</x:String>
                    <x:String>Female</x:String>
                </Picker.Items>
            </Picker>
            <Picker
                x:Name="departmentPicker"
                Title="Department"
                Margin="10,10,10,0" />
            <DatePicker
                x:Name="birthDatePicker"
                Margin="10,10,10,0"
                TextColor="Black" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
